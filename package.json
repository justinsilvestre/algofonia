{
  "name": "algofonia",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^24.11.0"
  },
  "scripts": {
    "dev": "tsx server.ts",
    "dev:tunnel": "concurrently \"npm run tunnel\" \"TUNNEL=1 npm run dev\"",
    "build": "next build",
    "start": "NODE_ENV=production tsx server.ts",
    "export": "next build",
    "test": "vitest",
    "lint": "eslint",
    "format": "prettier --write .",
    "prepare": "husky",
    "docker:build": "docker build -t algofonia .",
    "docker:export": "npm run docker:build && docker save -o algofonia.tar algofonia",
    "docker:run": "docker run -p 3000:3000 algofonia",
    "tsc": "tsc --noEmit",
    "tunnel": "cloudflared tunnel --url http://localhost:3000"
  },
  "dependencies": {
    "cloudflared": "^0.7.1",
    "concurrently": "^9.2.1",
    "mkcert": "^3.2.0",
    "motion-sensors-polyfill": "^0.3.7",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-screen-wake-lock": "^3.1.1",
    "tonal": "^6.4.2",
    "tone": "^15.1.22",
    "tsx": "^4.20.6",
    "vitest": "^4.0.8",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/motion-sensors-polyfill": "^0.3.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
